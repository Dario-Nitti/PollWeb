<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>jdbc/pollwebdb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <context-param>
        <param-name>data.source</param-name>
        <param-value>jdbc/pollwebdb</param-value>
    </context-param>
    <context-param>
        <param-name>view.template_directory</param-name>
        <param-value>templates</param-value>
    </context-param>
    <context-param>
        <param-name>view.outline_template</param-name>
        <param-value>outline.ftl.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.debug</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>view.encoding</param-name>
        <param-value>ISO-8859-1</param-value>
    </context-param>
    <context-param>
        <param-name>view.error_template</param-name>
        <param-value>error.ftl.html</param-value>
    </context-param>
    <servlet>
        <servlet-name>BaseController</servlet-name>
        <servlet-class>iw.pollweb.controller.BaseController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>homepage</servlet-name>
        <servlet-class>iw.pollweb.controller.homepage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>iw.pollweb.controller.Autentication</servlet-class>
    </servlet>
    <!--- servlet mapping and url pattern-->
    <servlet>
        <servlet-name>SurveyController</servlet-name>
        <servlet-class>iw.pollweb.controller.SurveyController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActionOnSurvey</servlet-name>
        <servlet-class>iw.pollweb.controller.ActionOnSurvey</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ParticipantController</servlet-name>
        <servlet-class>iw.pollweb.controller.ParticipantController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homepage</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SurveyController</servlet-name>
        <url-pattern>/survey</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActionOnSurvey</servlet-name>
        <url-pattern>/modifysurvey</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ParticipantController</servlet-name>
        <url-pattern>/participant</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
